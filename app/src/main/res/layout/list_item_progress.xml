<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/list_item_progress_margin_horizontal"
    android:layout_marginVertical="@dimen/list_item_progress_margin_vertical"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="@dimen/list_item_progress_card_corner_radius"
    app:cardElevation="@dimen/list_item_progress_card_elevation"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/list_item_progress_header_padding_horizontal"
            android:paddingVertical="@dimen/list_item_progress_header_padding_vertical"
            android:textColor="@color/white"
            tools:background="@drawable/gradient_notification_color"
            tools:text="Name holder" />

        <TextView
            android:id="@+id/progressAnalysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_progress_content_margin_top"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="Progress Analysis" />

        <TextView
            android:id="@+id/progressDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_progress_content_margin_top_small"
            android:layout_marginBottom="@dimen/list_item_progress_content_margin_bottom"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_micro"
            tools:text="Progress Description" />

        <TextView
            android:id="@+id/materialTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:text="@string/materials"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/materialList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_progress_content_margin_bottom"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_micro"
            android:visibility="gone"
            tools:text="No materials needed" />

        <LinearLayout
            android:id="@+id/materialApprovedStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_progress_content_margin_bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/materialApprovalIcon"
                android:layout_width="@dimen/list_item_progress_approval_icon_size"
                android:layout_height="@dimen/list_item_progress_approval_icon_size"
                android:layout_gravity="center"
                tools:ignore="ContentDescription"
                tools:src="@drawable/baseline_check_circle_outline_24" />

            <TextView
                android:id="@+id/materialApprovalMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_progress_approval_icon_margin_start"
                android:text="@string/approved"
                android:textColor="@color/custom_toast_font_success"
                android:textSize="@dimen/text_size_micro"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressDoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_progress_content_margin_bottom"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_progress_divider_height"
                app:cardBackgroundColor="@color/custom_toast_font_normal_soft_gray"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_progress_image_container_height"
                android:layout_marginTop="@dimen/list_item_progress_content_margin_top"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/imageCarouselHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/submissionImage"
                        android:layout_alignTop="@id/submissionImage"
                        android:layout_alignEnd="@id/submissionImage"
                        android:layout_alignBottom="@id/submissionImage" />

                    <ImageView
                        android:id="@+id/submissionImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/image_placeholder" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circleIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/list_item_progress_indicator_padding"
                app:ci_drawable="@drawable/circle_indicator_color"
                app:ci_height="@dimen/list_item_progress_indicator_size"
                app:ci_width="@dimen/list_item_progress_indicator_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_progress_content_margin_top"
                android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
                android:text="@string/progress_result_description"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressResultDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_progress_content_margin_top_small"
                android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_micro"
                tools:text="Description" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/expandShrinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_progress_expand_button_margin_bottom"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/arrowExpandShrink"
                android:layout_width="@dimen/list_item_progress_expand_arrow_size"
                android:layout_height="@dimen/list_item_progress_expand_arrow_size"
                android:layout_gravity="center"
                android:rotation="270"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/dateTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_progress_datetime_margin_bottom"
            android:paddingHorizontal="@dimen/list_item_progress_content_padding_horizontal"
            android:textAlignment="textEnd"
            android:textSize="@dimen/copyright_text_size"
            android:textStyle="bold"
            tools:text="2024-11-29 16:15:24" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
