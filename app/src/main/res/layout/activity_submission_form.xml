<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".activities.SubmissionFormActivity">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:elevation="@dimen/login_button_elevation"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dialog_loading_content_padding"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/login_button_corner_radius"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/dialog_margin"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/make_submission_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dialog_loading_content_padding"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/login_button_corner_radius"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/dialog_margin"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="@dimen/list_item_shimmer_location_icon_size"
                android:layout_height="@dimen/list_item_shimmer_location_icon_size"
                android:src="@drawable/done_icon"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="@dimen/main_menu_notification_icon"
            android:layout_height="@dimen/main_menu_notification_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dialog_loading_content_padding"
            android:indeterminateTint="@color/button_color"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/mainFormContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/list_item_padding">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/caseTitleFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:hint="@string/case_title"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/caseTitleField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/locationFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/location"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/locationField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/departmentDropdownLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:minHeight="@dimen/toolbar_height"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/login_button_corner_radius"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/dialog_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar"
                app:strokeColor="@color/form_field_stroke"
                app:strokeWidth="@dimen/login_field_stroke_width">

                <TextView
                    android:id="@+id/selectedDepartmentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/dialog_margin"
                    android:text="@string/department_destination"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/categoryDropdownLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/login_button_corner_radius"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/list_item_progress_content_margin_top_small"
                app:contentPaddingLeft="@dimen/dialog_loading_content_padding"
                app:contentPaddingRight="@dimen/dialog_loading_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar"
                app:strokeColor="@color/form_field_stroke"
                app:strokeWidth="@dimen/login_field_stroke_width">

                <Spinner
                    android:id="@+id/categoryDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:listitem="@layout/support_simple_spinner_dropdown_item" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/machineCodeFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/machine_code"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/machineCodeField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/machineNameFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/machine_name"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/machineNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/case_description"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_progress_image_container_height"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/materials"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMaterials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/list_item_selected_items" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:text="@string/attach_photo"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/dialog_loading_content_padding"
                android:layout_marginBottom="@dimen/list_item_padding"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chooseFileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dialog_loading_content_padding"
                    app:cardBackgroundColor="@color/button_color"
                    app:cardCornerRadius="@dimen/login_button_corner_radius"
                    app:cardElevation="@dimen/dialog_elevation"
                    app:contentPaddingBottom="@dimen/dialog_margin"
                    app:contentPaddingLeft="@dimen/list_item_padding"
                    app:contentPaddingRight="@dimen/list_item_padding"
                    app:contentPaddingTop="@dimen/dialog_margin"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_file"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/manageAttachmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dialog_margin"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/login_button_corner_radius"
                    app:cardElevation="0dp"
                    app:contentPadding="@dimen/dialog_margin"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/manageAttachmentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_photo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_micro"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/manageOldAttachmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dialog_margin"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/login_button_corner_radius"
                    app:cardElevation="0dp"
                    app:contentPadding="@dimen/dialog_margin"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_old_photo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_micro"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
