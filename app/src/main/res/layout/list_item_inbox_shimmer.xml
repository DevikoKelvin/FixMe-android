<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/dialog_margin"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_toast_font_normal_soft_gray"
            android:paddingHorizontal="@dimen/list_item_padding"
            android:paddingVertical="@dimen/dialog_margin" />

        <TextView
            android:id="@+id/notificationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_item_padding"
            android:layout_marginVertical="@dimen/dialog_margin"
            android:background="@color/custom_toast_font_normal_soft_gray"
            android:textColor="@color/custom_toast_font_normal_soft_gray"
            tools:text="@tools:sample/lorem" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_divider_height"
            android:background="@color/custom_toast_font_normal_soft_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/list_item_padding"
            android:paddingVertical="@dimen/dialog_margin"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_elevation"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:text="@string/inbox_sent"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sentTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_elevation"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textSize="@dimen/copyright_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_elevation"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:text="@string/inbox_read"
                    android:textAlignment="textEnd"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/readTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_elevation"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:textAlignment="textEnd"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textSize="@dimen/copyright_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>