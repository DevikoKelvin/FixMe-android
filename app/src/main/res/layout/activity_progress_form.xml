<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".activities.ProgressFormActivity">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/white"
        android:elevation="@dimen/login_button_elevation"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dialog_loading_content_padding"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/login_button_corner_radius"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/dialog_margin"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/create_new_progress"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/repairAnalysisFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/repair_analysis"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repairAnalysisField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_menu_item_height"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:hint="@string/case_description"
                app:boxCornerRadiusBottomEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/login_field_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/login_field_corner_radius"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="@dimen/login_field_stroke_width"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_menu_item_height"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/text_size_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/user_info_item_margin_top"
                android:text="@string/materials"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMaterials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/dialog_loading_content_padding"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/list_item_selected_items" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_padding"
                android:layout_marginTop="@dimen/toast_internal_padding"
                android:layout_marginBottom="@dimen/bottom_sheet_drawer_width"
                android:text="@string/materials_hint"
                android:textSize="@dimen/text_size_micro" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/progressActionButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_padding_bottom"
        android:layout_margin="@dimen/list_item_padding"
        app:cardCornerRadius="@dimen/login_button_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/progressActionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_accent_color"
            android:gravity="center"
            android:text="@string/create_new_progress"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:indeterminateTint="@color/white"
            android:padding="@dimen/dialog_loading_content_padding"
            android:visibility="gone" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>