<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/card_elevation"
    app:cardBackgroundColor="@color/custom_toast_background_normal"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:contentPadding="@dimen/login_button_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Filename.jpg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_margin">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/seePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_progress_bar_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/button_color"
                app:cardCornerRadius="@dimen/toast_card_corner_radius"
                app:strokeWidth="0dp"
                tools:ignore="RelativeOverlap">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradient_accent_color"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginVertical="@dimen/dialog_margin"
                    android:text="@string/see_photo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deletePhotoButton"
                android:layout_width="@dimen/login_progress_bar_size"
                android:layout_height="@dimen/login_progress_bar_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/card_elevation"
                app:cardBackgroundColor="@color/custom_toast_font_failed"
                app:cardCornerRadius="@dimen/toast_card_corner_radius"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradient_high_complexity"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_corner_radius"
                    android:src="@drawable/delete_icon"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>