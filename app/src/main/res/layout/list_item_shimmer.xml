<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/list_item_shimmer_margin_horizontal"
    android:layout_marginVertical="@dimen/list_item_shimmer_margin_vertical"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="@dimen/list_item_shimmer_card_corner_radius"
    app:cardElevation="@dimen/list_item_shimmer_card_elevation"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_toast_font_normal_soft_gray"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/list_item_shimmer_header_padding_horizontal"
            android:paddingVertical="@dimen/list_item_shimmer_header_padding_vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/submissionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inputDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/copyright_text_size" />

                <TextView
                    android:id="@+id/noRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_micro"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/submissionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_item_shimmer_description_margin_horizontal"
            android:layout_marginVertical="@dimen/list_item_shimmer_description_margin_vertical"
            android:background="@color/custom_toast_font_normal_soft_gray"
            android:paddingHorizontal="@dimen/list_item_shimmer_description_padding_horizontal"
            android:paddingVertical="@dimen/list_item_shimmer_description_padding_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/list_item_shimmer_machine_info_padding_horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineCodeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/custom_toast_font_normal_soft_gray" />

                <TextView
                    android:id="@+id/machineNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_shimmer_machine_name_margin_top"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:text="@string/machine_name"
                    android:textColor="@color/custom_toast_font_normal_soft_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_shimmer_machine_code_margin_start"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textStyle="bold"
                    tools:text="D-14" />

                <TextView
                    android:id="@+id/machineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_shimmer_machine_name_margin_top"
                    android:background="@color/custom_toast_font_normal_soft_gray"
                    android:textColor="@color/custom_toast_font_normal_soft_gray"
                    android:textStyle="bold"
                    tools:text="Autoclave E-Chung" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_item_shimmer_location_margin_horizontal"
            android:layout_marginTop="@dimen/list_item_shimmer_location_margin_top"
            android:background="@color/custom_toast_font_normal_soft_gray"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/list_item_shimmer_location_icon_size"
                android:layout_height="@dimen/list_item_shimmer_location_icon_size"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/submissionLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/list_item_shimmer_location_text_margin_start"
                android:textColor="@color/custom_toast_font_normal_soft_gray"
                tools:text="Erela HQ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_shimmer_reported_by_margin_top"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/list_item_shimmer_reported_by_padding_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/custom_toast_font_normal_soft_gray"
                android:text="@string/reported_by"
                android:textColor="@color/custom_toast_font_normal_soft_gray" />

            <TextView
                android:id="@+id/reportedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_shimmer_reported_by_text_margin_start"
                android:background="@color/custom_toast_font_normal_soft_gray"
                android:textColor="@color/custom_toast_font_normal_soft_gray"
                android:textStyle="bold"
                tools:text="Hendrick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_shimmer_department_margin_top"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/list_item_shimmer_department_padding_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/custom_toast_font_normal_soft_gray"
                android:text="@string/department_from"
                android:textColor="@color/custom_toast_font_normal_soft_gray" />

            <TextView
                android:id="@+id/departmentFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_shimmer_department_text_margin_start"
                android:background="@color/custom_toast_font_normal_soft_gray"
                android:textColor="@color/custom_toast_font_normal_soft_gray"
                android:textStyle="bold"
                tools:text="Information Technology" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/list_item_shimmer_tags_container_margin"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/complexity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_item_shimmer_tag_margin_end"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/list_item_shimmer_tag_padding"
                app:contentPaddingLeft="@dimen/list_item_shimmer_tag_padding_horizontal"
                app:contentPaddingRight="@dimen/list_item_shimmer_tag_padding_horizontal"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/complexityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_micro"
                    android:textStyle="bold"
                    tools:text="Low" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/submissionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/list_item_shimmer_tag_padding"
                app:contentPaddingLeft="@dimen/list_item_shimmer_tag_padding_horizontal"
                app:contentPaddingRight="@dimen/list_item_shimmer_tag_padding_horizontal"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/submissionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_micro"
                    android:textStyle="bold"
                    tools:text="On Progress" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>