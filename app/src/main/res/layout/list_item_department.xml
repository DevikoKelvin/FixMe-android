<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/list_item_department_margin_horizontal"
    android:layout_marginVertical="@dimen/list_item_department_margin_vertical"
    app:cardBackgroundColor="#FFFCF7"
    app:cardCornerRadius="@dimen/list_item_department_card_corner_radius"
    app:cardElevation="@dimen/list_item_department_card_elevation"
    app:contentPaddingBottom="@dimen/list_item_department_content_padding_vertical"
    app:contentPaddingLeft="@dimen/list_item_department_content_padding_horizontal"
    app:contentPaddingRight="@dimen/list_item_department_content_padding_horizontal"
    app:contentPaddingTop="@dimen/list_item_department_content_padding_vertical"
    app:strokeWidth="0dp">

    <TextView
        android:id="@+id/departmentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Information Technology" />
</androidx.cardview.widget.CardView>