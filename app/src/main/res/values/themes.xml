<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FixMe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorSecondary">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FixMe" parent="Base.Theme.FixMe" />

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheets_background</item>
    </style>

    <style name="FloatingButtonCancel" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:background">@drawable/fab_cancel_gradient</item>
        <item name="icon">@drawable/baseline_close_24</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="FloatingButtonEdit" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:background">@drawable/fab_edit_gradient</item>
        <item name="icon">@drawable/baseline_edit_24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="FloatingButtonMore" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:background">@drawable/fab_more_gradient</item>
        <item name="icon">@drawable/baseline_more_vert_24</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>