<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/card_elevation"
    app:cardBackgroundColor="@color/custom_toast_background_normal"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:contentPadding="@dimen/dialog_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Filename.jpg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_margin">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/seePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_progress_bar_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/button_color"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:contentPaddingBottom="@dimen/dialog_margin"
                app:contentPaddingLeft="@dimen/activity_horizontal_margin"
                app:contentPaddingRight="@dimen/activity_horizontal_margin"
                app:contentPaddingTop="@dimen/dialog_margin"
                app:strokeWidth="0dp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/see_photo"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deletePhotoButton"
                android:layout_width="@dimen/login_progress_bar_size"
                android:layout_height="@dimen/login_progress_bar_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/card_elevation"
                app:cardBackgroundColor="@color/custom_toast_font_failed"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:contentPadding="@dimen/card_elevation"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_delete_forever_24" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>